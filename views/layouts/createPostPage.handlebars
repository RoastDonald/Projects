<form action="/createPost?_csrf={{csrfToken}}" class="inverted ui form" method="post" enctype="multipart/form-data">
    <div class="ui form">
        <div class="field">
            Subject
            <label for="one">Subject</label>
            <textarea name="subject" rows="1" id="one"></textarea>
        </div>

        <div class="field">
            Text
            <label for="two">Text</label>
            <textarea name="message" id="two"></textarea>
        </div>
        <input type="file" name="file" (change)="fileEvent($event)" class="inputfile" id="embedpollfileinput" />


        <label for="embedpollfileinput" class="ui huge red right floated button">
            <i class="ui upload icon"></i>
            Upload image
        </label>

        <button class="ui button" type="submit">Submit</button>
    </div>
</form>






